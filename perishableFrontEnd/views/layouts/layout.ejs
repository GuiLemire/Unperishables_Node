  <script>
    //Setting min and default date to today
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1; //January is 0 so need to add 1 to make it 1!
    var yyyy = today.getFullYear();
    if (dd < 10) { dd = '0' + dd } if (mm < 10) { mm = '0' + mm } today = yyyy + '-' + mm + '-' + dd;
    document.getElementById("perishable-bestbeforedate").setAttribute("min", today)
  </script>
  <script>    
    document.getElementById("perishable-bestbeforedate-new").setAttribute("min", today)
    document.getElementById("perishable-boughtdate-new").setAttribute("min", today)
    document.getElementById("perishable-bestbeforedate-new").defaultValue = today
    document.getElementById("perishable-boughtdate-new").defaultValue = today
  </script>
</body>
